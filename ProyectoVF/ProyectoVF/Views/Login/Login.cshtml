@{
}
<html>
<head>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>

	<link rel="stylesheet" href="~/css/Loginn.css" />
</head>
<body>
	<h1>INICIO DE SESIÓN</h1>
	<div class="container">
		<form class="form-signin" asp-controller="Login" asp-action="Comprobar" id='valForm' method="post">
			<div class="form-box">
				<div class="requirements">
					<label for="inputEmail" class="sr-only">Correo electrónico</label>
					<input type="text" class="form-control" placeholder="Correo electrónico" asp-for="DireccionCliente" />

					<label for="inputPassword" class="sr-only">Contraseña</label>
					<input type="password" class="form-control" placeholder="Contraseña" asp-for="PasswordCliente" />

					<button class="btn btn-lg btn-primary btn-block" type="submit">
						Iniciar sesión
					</button>
				</div>
				<div class="no-log">
					<p class="text-button" style="display: inline-block;">¿No tienes cuenta?</p>
					<input type="submit" value="Registrate" asp-action="Registro" />
				</div>
				<div class="form-signin-heading">
					<div class="text-muted" id='error'>
					</div>
					<div class="text-dark">
						<input type="submit" value="Regresar" asp-controller="Main" asp-action="Index" />
					</div>
				</div>
			</div>
		</form>
	</div>
</body>
</html>
